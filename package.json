{
  "name": "skillswap",
  "version": "1.0.0",
  "description": "A decentralized skill-sharing and mentorship platform",
  "main": "backend/index.js",
  "scripts": {
    "start": "node backend/index.js",
    "dev": "nodemon backend/index.js",
    "test": "hardhat test",
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.js",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "frontend": "cd frontend && npm start",
    "mobile": "cd mobile_app && npm start",
    "build": "cd frontend && npm run build",
    "vercel-build": "cd frontend && npm install --legacy-peer-deps && npm run build"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "@reduxjs/toolkit": "^2.0.0",
    "@types/uuid": "^10.0.0",
    "ethers": "^6.8.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.3",
    "redis": "^4.6.10",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "uuid": "^11.1.0",
    "web3": "^4.2.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@types/react": "^18.2.37",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "hardhat": "^2.19.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "prettier-plugin-solidity": "^1.2.0",
    "ts-node": "^10.9.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Roxonn-FutureTech/skillswap.git"
  },
  "keywords": [
    "blockchain",
